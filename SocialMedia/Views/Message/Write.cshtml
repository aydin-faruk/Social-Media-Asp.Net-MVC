@model SocialMedia.Entity.Models.Message

@{
    ViewBag.Title = "Write";
}
   <div class="col-md-9">
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div>
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <a href="/Message/Index/?userId=@Convert.ToInt32(Session["SNUserID"])">
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-mail-reply"></i>  Geri Dön</button>
                                </a>
                            </div>
                            @using (Html.BeginForm("Write", "Message", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="box-body">
                                    <div class="form-group">
                                        @*@Html.DropDownList("UserID", new SelectList(ViewBag.Follow, "UserID", "Name Surname"), "Alıcı Seçiniz..", new { @class = "form-control" })*@
                                        @Html.DropDownList("Receiver", null, "Alıcı Seçiniz..", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <textarea id="Explain" name="Explain" class="form-control" style="height: 300px">
                                            Merhaba
                                        </textarea>
                                    </div>

                                </div>
                                <div class="box-footer">
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-envelope-o"></i> Gönder</button>
                                    </div>
                                    <div class="form-group">
                                        <div class="btn btn-default btn-file">
                                            <i class="fa fa-paperclip"></i> Dosya Yükle
                                            <input type="file" name="attachment">
                                        </div>
                                    </div>
                                </div>
                            }   
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
    <script>
  $(function () {
    $("#compose-textarea").wysihtml5();
  });
    </script>