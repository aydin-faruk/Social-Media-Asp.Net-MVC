@model SocialMedia.Entity.Models.Share

@{
    ViewBag.Title = "Index";
}

    <!-- /.col -->
    <div class="col-md-6">

        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Ne Düşünüyorsun?</h3>
            </div>
            <div class="box-body">
            @using (Html.BeginForm("Share", "index", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.TextAreaFor(x=>x.Explain, new { @class = "form-control", @rows="5"})
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="divs">
                                <input type='file' name ="image" id='image' class="inputs" accept="image/*">
                                <i style="color:#367fa9;" class="fa fa-image fa-2x icons"></i>
                            </div>
                            <div class="divs">
                                <input type='file' name='video' id='video' class="inputs" accept="video/*">
                                <i style="color:#367fa9;" class="fa fa-video-camera fa-2x icons"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">

                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Paylaş</button>
                        </div>
                    </div>
            }
            </div>
            <!-- /.box-body -->
        </div>       

        @Html.Action("PartialShare", "index")

    </div>
    <!-- /.col -->

    <div class="col-md-3">
        @Html.Action("PartialUsers", "index")
    </div>
