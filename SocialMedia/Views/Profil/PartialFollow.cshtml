@model IEnumerable<SocialMedia.Entity.Models.User>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Takip Ettiklerin</h3>
        <div class="box-tools pull-right">
            @*<span class="label label-danger">8 New Members</span>*@
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <ul class="users-list clearfix">
            @foreach (var item in Model)
            {
                <li>
                    <img src="@item.UserPicture" alt="User Image">
                    <a class="users-list-name" href="#">@item.Name @item.Surname</a>
                    <span class="users-list-date">
                            <form action="/Profil/DeleteFollow/?userId=@item.UserID" method="post">
                                <button type="submit" class="btn btn-danger btn-xs">Sil</button>
                            </form>            
                    </span>
                </li>
            }
        </ul>
        <!-- /.users-list -->
    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
        <a href="javascript:void(0)" class="uppercase">Tümünü Gör</a>
    </div>
    <!-- /.box-footer -->
</div>